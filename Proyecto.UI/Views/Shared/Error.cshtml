@model Proyecto.UI.Models.ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<h1 class="text-danger">Error.</h1>
<h2 class="text-danger">Ocurrió un error al procesar tu solicitud.</h2>

<!--
  AQUÍ MOSTRAMOS EL MENSAJE DE ERROR REAL.
  Esto nos dirá por qué falló la llamada a la API.
-->
@if (Model != null && !string.IsNullOrEmpty(Model.Message))
{
    <h3 class="text-danger">Detalle del Error:</h3>
    <p>
        <code>@Model.Message</code>
    </p>
}


@if (Model?.ShowRequestId ?? false)
{
    <p>
        <strong>Request ID:</strong> <code>@Model.RequestId</code>
    </p>
}
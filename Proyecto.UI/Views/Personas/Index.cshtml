@model IEnumerable<Proyecto.Model.Persona>

@{
    ViewData["Title"] = "Lista de Personas";
}

<h1>Lista de Personas</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Crear Nueva Persona</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Identificacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellidos)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Identificacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Apellidos)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefono)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Salario)
                </td>
                <td>
                    <!--
                      ¡CAMBIO IMPORTANTE!
                      El enlace de Edit ahora pasa 'asp-route-identificacion' (string)
                      en lugar de 'asp-route-id' (int).
                    -->
                    <a asp-action="Edit" asp-route-identificacion="@item.Identificacion" class="btn btn-warning">Editar</a> |
                    <!-- (Agregaremos los enlaces de Details y Delete después) -->
                    <!-- <a asp-action="Details" asp-route-identificacion="@item.Identificacion">Details</a> | -->
                    <!-- <a asp-action="Delete" asp-route-identificacion="@item.Identificacion">Delete</a> -->
                </td>
            </tr>
        }
    </tbody>
</table>
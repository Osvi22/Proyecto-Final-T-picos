@model Proyecto.Model.Vehiculo

@{
    ViewData["Title"] = "Crear Vehículo";
}

<h1>Registrar Nuevo Vehículo</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <input type="hidden" asp-for="Id" value="0" />

            <div class="form-group mb-3">
                <label asp-for="Placa" class="control-label"></label>
                <input asp-for="Placa" class="form-control" />
                <span asp-validation-for="Placa" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Marca" class="control-label"></label>
                <input asp-for="Marca" class="form-control" />
                <span asp-validation-for="Marca" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Modelo" class="control-label"></label>
                <input asp-for="Modelo" class="form-control" />
                <span asp-validation-for="Modelo" class="text-danger"></span>
            </div>

            <!-- CAMBIO AQUÍ: Dropdown para el Dueño -->
            <div class="form-group mb-3">
                <label asp-for="PersonaId" class="control-label">Dueño del Vehículo</label>
                <select asp-for="PersonaId" class="form-select" asp-items="ViewBag.ListaDePersonas">
                    <option value="">-- Seleccione un Dueño --</option>
                </select>
                <span asp-validation-for="PersonaId" class="text-danger"></span>
            </div>

            <br />
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}